{% if dice == 1 %}
    <i class="fas fa-dice-one fa-2x dice-color-{{ color }}"></i>
{% elseif dice == 2 %}
    <i class="fas fa-dice-two fa-2x dice-color-{{ color }}"></i>
{% elseif dice == 3 %}
    <i class="fas fa-dice-three fa-2x dice-color-{{ color }}"></i>
{% elseif dice == 4 %}
    <i class="fas fa-dice-four fa-2x dice-color-{{ color }}"></i>
{% elseif dice == 5 %}
    <i class="fas fa-dice-five fa-2x dice-color-{{ color }}"></i>
{% elseif dice == 6 %}
    <i class="fas fa-dice-six fa-2x dice-color-{{ color }}"></i>
{% endif %}